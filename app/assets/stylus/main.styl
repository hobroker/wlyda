@import "_mixins.styl"

html {
	position: relative;
	min-height: 100%;
}
body {
	margin-bottom: 60px;
}
footer {
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 60px;
	line-height: 60px;
}
.d-center {
	text-align center
}
.btn-fb {
	color #fff
	background-color $fb-btn-color
	border-color $fb-btn-color
	cursor: pointer
	&:hover, &:focus {
		background-color darken($fb-btn-color, 15%)
		border-color darken($fb-btn-color, 15%)
		color #fff
	}
}
.card {
	padding: 15px;
	.img {
		width: 100%
		height: 300px
		background-size: cover
	}
	.content {
		font-size 13px
	}
}
.like-box {
	.btn {
		cursor: pointer
	}
}